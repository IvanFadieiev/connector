<script type="text/javascript">
  ShopifyApp.ready(function(){
    ShopifyApp.Bar.initialize({
      title: "Home",
      icon: "<%= asset_path('faveicon.png') %>"
    });
  });
</script>

<div class="container">
  <div class = "row">
    <div class="col-md-4 col-md-offset-4">
      <%= form_for @login do |f| %>
        <%= f.label "Magento store URL" %>:<br />
        <%= f.text_field :store_url %><br />
        
        <%= f.label "Magento API username" %>:<br />
        <%= f.text_field :username %><br />
      
        <%= f.label "Magento API Key" %>:<br />
        <%= f.password_field :key %><br />
        
        <%= f.label "Magento StoreView ID:" %><br />
        <%= f.text_field :store_id %><br /><br />
      
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>